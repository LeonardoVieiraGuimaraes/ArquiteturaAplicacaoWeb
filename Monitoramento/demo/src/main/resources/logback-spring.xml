<?xml version="1.0" encoding="UTF-8"?>
<!--
    Configuração de logging em JSON para facilitar ingestão por ferramentas (Loki/ELK).
    Inclui MDC automaticamente (pedidoId, usuario) e metadados úteis.
-->
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <pattern>
                    <pattern>
                        {"level":"%level","logger":"%logger{36}","thread":"%thread"}
                    </pattern>
                </pattern>
                <mdc/>
                <context/>
                <logLevel/>
                <message/>
                <stackTrace/>
            </providers>
        </encoder>
    </appender>

    <!-- Nível padrão de log -->
    <root level="INFO">
        <appender-ref ref="JSON_CONSOLE"/>
    </root>
</configuration>
